<p id="notice"><%= notice %></p>

<%= @comments = @my_thread.comments %>


<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>My thread</th>
      <th>Text</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.my_thread.title %></td>
        <td><%= comment.text %></td>
        <td><%= link_to 'Show', my_thread_comment_path(@my_thread, comment) %></td>
        <td><%= link_to 'Edit', edit_my_thread_comment_path(@my_thread, comment) %></td>
        <td><%= link_to 'Destroy', [@my_thread, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_my_thread_comment_path %>
